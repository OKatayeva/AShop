@model AShop_Models.ViewModels.ProductUserViewModel


<form method="post">
    <br />
    <div>
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-outline-info btn-sm" asp-action="Index">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Buyer Details:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Name*</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.FullName" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone*</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.PhoneNumber" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email*</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Email" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Address*</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.StreetAddress" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.StreetAddress" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>City*</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.City" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>State*</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.State" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.State" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Postal Code*</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.PostalCode" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label class="form-check-label" for="IsCompany">
                                            Buyer is company?
                                        </label>

                                    </div>
                                    <div class="col-9">
                                        @Html.CheckBoxFor(model => model.ApplicationUser.IsCompany)
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>VAT number</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.VATNumber" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.VATNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Products:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @{ var orderTotal = 0.0;}
                                        @for (int i = 0; i < Model.ProductList.Count(); i++)
                                        {
                                            <input type="hidden" asp-for="@Model.ProductList[i].Id" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].Name" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].Price" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].ProductQuantity" />
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Model.ProductList[i].Name</h6>
                                                    <small class="text-muted">Price: @Model.ProductList[i].Price EUR</small>
                                                    <small class="text-muted"> Quantity: @Model.ProductList[i].ProductQuantity </small>
                                                    @*<input id="Quantity" asp-for=@Model.ProductList[i].ProductQuantity type="number" class="form-control"/>*@
                                                </div>
                                            </li>
                                            orderTotal += Model.ProductList[i].Price * Model.ProductList[i].ProductQuantity;
                                        }
                                        <li class="list-group-item d-flex justify-content-between bg-light">
                                            <strong class="text-info"> Total</strong>
                                            <strong class="text-info">@orderTotal EUR</strong>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            <button type="submit" onclick="return validateInput()" class="btn btn-primary form-control">Submit Order</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_validationScriptsPartial" />
    }
<script>
    function validateInput() {
        var app_name = document.getElementById("ApplicationUser_FullName").value;
        var app_phone = document.getElementById("ApplicationUser_PhoneNumber").value;
        var app_email = document.getElementById("ApplicationUser_Email").value;
        var app_streetaddress = document.getElementById("ApplicationUser_StreetAddress").value;
        var app_city = document.getElementById("ApplicationUser_City").value;
        var app_state = document.getElementById("ApplicationUser_State").value;
        var app_postalcode = document.getElementById("ApplicationUser_PostalCode").value;
        if (app_name.toString() == '') {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please enter Full Name!'
            })
            return false;
        }
        if (app_phone.toString() == '') {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please enter Phone Number!'
            })
            return false;
        }
        if (app_email.toString() == '') {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please enter Email!'
            })
            return false;
        }
        if (app_streetaddress.toString() == '') {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please enter Address!'
            })
            return false;
        }
        if (app_city.toString() == '') {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please enter City!'
            })
            return false;
        }
        if (app_state.toString() == '') {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please enter State!'
            })
            return false;
        }
        if(app_postalcode.toString() == '') {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please enter Postal Code!'
            })
            return false;
        }
        return true;
    }
</script>
}
