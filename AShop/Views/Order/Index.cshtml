@model AShop_Models.ViewModels.OrderListVM
<form method="get">
    <div class="container p-4 my-3">
        <h2 class="text-success">Orders Management</h2>
        <div class="border bg-white p-3" style="border-radius:15px;">
            <div class="row">
                <div class="col-12">
                    <div class="row" style="padding-top:10px">
                        <div class="col-4">
                            @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control form-control-sm", @placeholder = "Name..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchEmail", new { htmlAttributes = new { @class = "form-control form-control-sm", @placeholder = "Email..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control form-control-sm", @placeholder = "Phone..." } })
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-4">
                            @Html.DropDownListFor(u => u.Status, Model.StatusList, "--Order Status--", new { @class = "form-control form-control-sm" })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchIsCompany", new { htmlAttributes = new { @class = "form-control form-control-sm", @placeholder = "Is Company?..." } })
                           
                        </div>
                        @*<div class="col-4">
                            @Html.DropDownList("searchIsCompany", new[] { new SelectListItem { Text = "True", Value = "1" }, new SelectListItem { Text = "False", Value = "0" } }, "--Is Company?--", new { @class = "form-control form-control-sm" })
                        </div>*@

                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-sm form-control">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
    <br/>
    <div class="control-section">
        <ejs-grid id="Grid" dataSource="@Model.OrderHeaderList" allowFiltering="true" allowSorting="true" allowPaging="true">
            <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
                <e-grid-column field="FullName" headerText="Name" textAlign="Right"></e-grid-column>
                <e-grid-column field="IsCompany" headerText="IsCompany" textAlign="Right"></e-grid-column>
                <e-grid-column field="Email" headerText="Email" textAlign="Right"></e-grid-column>
                <e-grid-column field="PhoneNumber" headerText="Phone" textAlign="Right"></e-grid-column>
                <e-grid-column field="OrderStatus" headerText="Status" textAlign="Right"></e-grid-column>
                <e-grid-column field="OrderDate" headerText="Order Date" customFormat="@(new { type="date", format="dd.MM.yyyy" })" textAlign="Right"></e-grid-column>
                <e-grid-column field="Id" headerText="" width="80"
                                template="<a rel='nofollow' href='Order/Details/${Id}' class='btn btn-primary btn-sm'> <i class='fas fa-eye'></i><a>">

                </e-grid-column>
            </e-grid-columns>
        </ejs-grid>

    </div>

